generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanStatus {
  PLANNED
  IN_PROGRESS
  ON_HOLD
  COMPLETED
}

model Customer {
  id             String    @id @default(cuid())
  name           String
  organization   String?
  industry       String?
  country        String?
  region         String?
  seller         String?
  website        String?
  email          String?
  phone          String?
  notes          String?
  potentialScore Int       @default(50)
  webshopSignals Json?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  contacts       Contact[]
  plans          Plan[]
}

model Contact {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  department  String?
  title       String?
  role        String?
  notes       String?
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Plan {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      PlanStatus @default(PLANNED)
  startDate   DateTime?
  endDate     DateTime?
  owner       String?
  customerId  String
  customer    Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model AppSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
