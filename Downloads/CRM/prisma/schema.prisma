generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanStatus {
  PLANNED
  IN_PROGRESS
  ON_HOLD
  COMPLETED
}

enum PlanPriority {
  LOW
  MEDIUM
  HIGH
}

enum ActivityType {
  NOTE
  CUSTOMER_UPDATED
  PLAN_CREATED
  PLAN_UPDATED
  CONTACT_CREATED
}

model Customer {
  id             String    @id @default(cuid())
  name           String
  organization   String?
  industry       String?
  country        String?
  region         String?
  seller         String?
  website        String?
  email          String?
  phone          String?
  notes          String?
  potentialScore Int       @default(50)
  webshopSignals Json?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  contacts       Contact[]
  plans          Plan[]
  activities     Activity[]
  salesRecords   SalesRecord[]
}

model Contact {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  department  String?
  title       String?
  role        String?
  notes       String?
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  activities  Activity[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Plan {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      PlanStatus @default(PLANNED)
  priority    PlanPriority @default(MEDIUM)
  startDate   DateTime?
  endDate     DateTime?
  owner       String?
  customerId  String
  customer    Customer   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  activities  Activity[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  message     String
  metadata    Json?
  customerId  String
  customer    Customer     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  planId      String?
  plan        Plan?        @relation(fields: [planId], references: [id], onDelete: SetNull)
  contactId   String?
  contact     Contact?     @relation(fields: [contactId], references: [id], onDelete: SetNull)
  actorName   String?
  createdAt   DateTime     @default(now())
}

model AppSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalesRecord {
  id                  String   @id @default(cuid())
  customerId          String
  customer            Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  source              String   @default("manual")
  externalCustomerRef String?
  periodStart         DateTime
  periodEnd           DateTime
  currency            String   @default("SEK")
  netSales            Float?
  grossMargin         Float?
  unitsSold           Int?
  ordersCount         Int?
  metadata            Json?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([customerId, periodStart, periodEnd])
  @@unique([customerId, source, periodStart, periodEnd])
}
